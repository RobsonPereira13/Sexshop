<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vendas.robso.vendas">

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconenovo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activitys.RecuperarSenha"
                  android:theme="@style/Theme.AppCompat.NoActionBar">

        </activity>
        <activity
            android:name=".activitys.CadastroUsuario"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activitys.SplashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activitys.LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.projekt.splashscreenactivity.LoginActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activitys.MainActivity" android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

</manifest>